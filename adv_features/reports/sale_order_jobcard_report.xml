<odoo>
    <!-- Report definition (Print menu) -->
    <report
            id="action_report_jobcard"
            model="sale.order"
            string="Job Card"
            report_type="qweb-pdf"
            name="sale_order_technician.report_saleorder_jobcard"
            file="sale_order_technician.report_saleorder_jobcard"
            print_report_name="'Job Card - %s' % (object.name)"
    />

    <!-- Server Action (Action menu) -->
    <record id="action_sale_order_jobcard" model="ir.actions.server">
        <field name="name">Print Job Card</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">action</field>
        <field name="state">report</field>
        <field name="report_name">sale_order_technician.report_saleorder_jobcard</field>
    </record>
</odoo>
