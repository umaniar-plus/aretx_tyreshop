<odoo>
    <template id="report_claim_report_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <h2 style="text-align:left;"><span t-esc="o.name"/></h2>
                        <br/>
                        <h2 style="text-align:center;">Claim Report</h2>
                        <br/>
                        <div>
                            <strong>Customer:</strong>
                            <span t-field="o.partner_id.name"/>
                            <br/>
                            <strong>Date:</strong>
                            <span t-esc="o.date"/>
                        </div>
                        <br/>
                        <table class="table table-sm o_main_table">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Description</th>
                                    <th>Quantity</th>
                                    <th>Product Status</th>
                                    <th>Claim Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.line_ids" t-as="line">
                                    <tr>
                                        <td>
                                            <span t-esc="line.product_id.display_name"/>
                                        </td>
                                        <td>
                                            <span t-esc="line.description or ''"/>
                                        </td>
                                        <td>
                                            <span t-esc="line.qty"/>
                                        </td>
                                        <td>
                                            <span t-esc="line.product_state"/>
                                        </td>
                                        <td>
                                            <span t-esc="o.state"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <p class="mt-3">
                            <strong>Note:</strong>
                            <span t-esc="o.note or ''"/>
                        </p>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <!-- Form View -->
    <record id="view_claim_report_form" model="ir.ui.view">
        <field name="name">claim.report.form</field>
        <field name="model">claim.report</field>
        <field name="arch" type="xml">
            <form string="Claim Report">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="pending,register,sent,pass,fail"/>
                    <button
                            name="action_done"
                            string="Claim Pass"
                            type="object"
                            class="btn-success"
                            invisible="state in ['pass', 'fail','pending','register']"
                    />
                    <button
                            name="action_cancel"
                            string="Claim Failed"
                            type="object"
                            class="btn-primary"
                            invisible="state in ['pass', 'fail','pending','register']"
                    />
                    <button
                            name="action_register"
                            string="Register"
                            type="object"
                            class="btn-primary"
                            invisible="state in ['pass', 'fail','sent','register']"
                    />
                    <button
                            name="action_sent"
                            string="Sent For Claim"
                            type="object"
                            class="btn-primary"
                            invisible="state in ['pending','pass', 'fail','sent']"
                    />


                </header>
                <sheet>
                    <!-- ðŸ‘‡ Add this field to make dynamic modifiers work -->
                    <field name="state" invisible="1"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="True"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" readonly="state in ['pass', 'fail']"/>
                            <field name="date" readonly="state in ['pass', 'fail']"/>
                        </group>
                        <group>
                            <field name="note"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Claim Lines">
<!--                            <field name="line_ids" readonly="state in ['sent', 'fail']" >-->
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="qty"/>
                                    <field name="product_state"/>

                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_claim_report_tree" model="ir.ui.view">
        <field name="name">claim.report.tree</field>
        <field name="model">claim.report</field>
        <field name="arch" type="xml">
            <tree string="Marks">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="action_claim_report" model="ir.actions.act_window">
        <field name="name">Claim Reports</field>
        <field name="res_model">claim.report</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_claim_report_root" name="Claim Reports" parent="account.menu_finance" sequence="90"/>
    <menuitem id="menu_claim_report" name="Claim Reports" parent="menu_claim_report_root" action="action_claim_report"
              sequence="10"/>
</odoo>
