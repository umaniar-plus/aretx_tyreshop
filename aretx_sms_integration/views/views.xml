    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="aretx_sms_integration_list">
      <field name="name">SMS Template List</field>
      <field name="model">custom.sms.templates</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="description"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="custom_sms_action_window">
      <field name="name">Sms Templates</field>
      <field name="res_model">custom.sms.templates</field>
      <field name="view_mode">tree,form,kanban</field>
    </record>

    <record model="ir.actions.act_window" id="aretx_sms_composer_action_window">
      <field name="name">Report</field>
      <field name="res_model">aretx.sms.composer</field>
      <field name="view_mode">tree</field>
    </record>


