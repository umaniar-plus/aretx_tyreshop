<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--=================================================== Product =================================================== -->
    <record id="view_sms_integration_product_reminder_form" model="ir.ui.view">
        <field name="name">product.template.inherited_automate_reminder</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <!--            <xpath expr="//field[@name='categ_id']" position="after">-->
            <xpath expr="/form/sheet/notebook/page[@name='general_information']/group/group[@name='group_standard_price']/field[@name='categ_id']"
                   position='after'>
                <field name="default_sms_template" invisible="detailed_type != 'service'"/>
                <field name="default_email_template" invisible="detailed_type != 'service'"/>
                <field name="from_order_date_number_of_days" invisible="detailed_type != 'service'" widget="integer"/>
                <field name="reminder_day_month_year" invisible="detailed_type != 'service'" widget="selection"/>

            </xpath>
        </field>
    </record>

</odoo>