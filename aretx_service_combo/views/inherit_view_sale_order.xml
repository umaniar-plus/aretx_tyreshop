<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherited_sale_order_line" model="ir.ui.view">
        <field name="name">sale.order.line.inherited</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='price_unit']"
                   position="after">

<!--                <field name="check" invisible="True"/>-->
<!--                <field name="vehicle_id" invisible="True"/>-->
                <field name="expiry_date" />


            </xpath>
        </field>
    </record>

    <record id="inherited_invoice_order_line" model="ir.ui.view">
        <field name="name">account.move.line.inherited</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/notebook/page/field[@name='invoice_line_ids']/tree/field[@name='price_unit']"
                   position="after">
<!--                <field name="check" invisible="True"/>-->
<!--                <field name="vehicle_id" invisible="True"/>-->
                <field name="expiry_date" optional="hide"/>
            </xpath>
        </field>
    </record>

</odoo>