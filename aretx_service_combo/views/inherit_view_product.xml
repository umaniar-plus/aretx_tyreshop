<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherited_view_product" model="ir.ui.view">
        <field name="name">product.template.inherited.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='purchase_ok']" position="after">
                <field name="is_service_combo"/>
                 <label for="is_service_combo"/>
            </xpath>
            <xpath expr="//page[@name='purchase']" position="after" >
                <page string="Service Combo" invisible="is_service_combo != True" >
                    <group>
                        <field name="contract_duration"/>
                    </group>
                    <field name="x_service_combo_ids">
                            <tree editable="bottom">
                                <field name="service_id"/>
                                <field name="no_of_items"/>
                            </tree>
                        </field>

                </page>
            </xpath>
        </field>
    </record>


</odoo>