<odoo>
    <template
        id="report_sale_document_inherit"
        inherit_id="sale.report_saleorder_document"
    >

        <xpath expr="//t[@t-set='address']"  position="replace">
<!--            <div t-field="doc.partner_id"-->
<!--                t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />-->
<!--            <div t-field="o.vehicle_number.x_vehicle_number_id" />-->
<!--            <div t-field="o.vehicle_kms" />-->
            <div class="main_vehicle_div">
                <div>
                <span t-field="doc.partner_id" t-options='{"widget": "contact", "fields": ["name"], "no_marker": True}' />
                <span t-field="doc.partner_id" t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}' />
                <span t-if="doc.partner_id.vat"><t t-esc="doc.company_id.country_id.vat_label or 'Tax ID'"/>: <span t-field="doc.partner_id.vat"/></span>
                <br><span t-if="doc.partner_id.phone">
                    <span> <i class="fa fa-phone"></i></span>
                    <span t-field="doc.partner_id.phone"/>
                </span>
                </br>
                <br>
                <span t-if="doc.partner_id.mobile">
                    <span> <i class="fa fa-mobile"></i></span>    <span t-field="doc.partner_id.mobile"/>
                </span>
                </br>
                <br>
                <span t-if="doc.partner_id.email">
                    <span> <i class="fa fa-envelope"></i></span>   <span t-field="doc.partner_id.email"/>
                </span>
                </br>

            </div>

                <br>
            <table style="width:100%;border:1px solid black;margin-bottom:5%;">
                    <tbody>
                        <tr style="">
                            <td style="border:1px solid black;">
                                <strong style="margin-left:10px;">Vehicle Number: </strong><span t-field="doc.x_vehicle_number_id"/>
                            </td>
                            <td style="border:1px solid black;">
                                <strong style="margin-left:10px;">Vehicle Brand-Model : </strong><span t-field="doc.x_vehicle_number_id.x_brand_id"/> - <span t-field="doc.x_vehicle_number_id.x_model_id"/>
                            </td>
                            <td style="border:1px solid black;">
                                <strong style="margin-left:10px;">Vehicle Kms : </strong><span t-field="doc.vehicle_kms"/>
                            </td>
                        </tr>
                    </tbody>
              </table>
            </br>
            </div>
        </xpath>

    </template>
</odoo>
