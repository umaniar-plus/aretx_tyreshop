<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherited_invoice_view" model="ir.ui.view">
        <field name="name">account.move.inherited</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group/group[@id='header_left_group']/field[@name='partner_shipping_id']"
                   position="after">

                <field name="vehicle_number"
                       context="{'default_x_vehicle_number_id': vehicle_number,'default_partner_id':partner_id}"
                       options="{'no_create': False, 'no_quick_create': True}" invisible="move_type not in ('out_invoice','out_refund')"/>

                <!--                <field name="vehicle_number" options="{'create': false}"/>-->
                <field name="vehicle_kms" invisible="move_type not in ('out_invoice','out_refund')"/>


            </xpath>
        </field>
    </record>

    <record id="view_move_form_inherit_reminder" model="ir.ui.view">
        <field name="name">account.move.form.inherit.reminder</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other_info']" position="inside">
                <group invisible="payment_state == 'paid'">
                    <field name="last_reminder_date"/>
                    <field name="reminder_count"/>
                </group>
            </xpath>
        </field>
    </record>


</odoo>