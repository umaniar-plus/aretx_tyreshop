<odoo>
    <record id="res_config_settings_view_form_tyreshop" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.tyreshop</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app data-string="Reminder Policy" string="Reminder Policy" name="theme_settings"
                     logo="aretx_vehicle/static/description/icon.png">
                    <div class="app_settings_block" data-string="Tyre Shop Policy" string="Tyre Shop Policy">

                        <h2 class="text-primary mt16 mb8">
                            <i class="fa fa-cog me-2 text-primary"/>
                            Tyre Shop Service Reminder Policy
                        </h2>

                        <div class="row mt16 o_settings_container">
                            <div class="col-lg-8 col-md-10 col-12">
                                <div class="d-flex flex-wrap gap-3">

                                    <!-- Reminder by KM -->
                                    <div class="o_setting_box shadow-sm rounded-3 p-3 flex-fill border border-200 bg-light">
                                        <div class="o_setting_left_pane">
                                            <i class="fa fa-road fa-2x text-info"/>
                                        </div>
                                        <div class="o_setting_right_pane ms-5">
                                            <label for="tyre_message_km" class="fw-bold text-dark"/>
                                            <field name="tyre_message_km" class="w-100"
                                                   placeholder="Enter KM value..."/>
                                            <div class="text-muted mt4 small">
                                                <i class="fa fa-info-circle me-1 text-secondary"/>
                                                Send message after every given KM.
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Reminder by Months -->
                                    <div class="o_setting_box shadow-sm rounded-3 p-3 flex-fill border border-200 bg-light">
                                        <div class="o_setting_left_pane">
                                            <i class="fa fa-calendar fa-2x text-success"/>
                                        </div>
                                        <div class="o_setting_right_pane ms-5">
                                            <label for="tyre_message_months" class="fw-bold text-dark"/>
                                            <field name="tyre_message_months" class="w-100"
                                                   placeholder="Enter months..."/>
                                            <div class="text-muted mt4 small">
                                                <i class="fa fa-info-circle me-1 text-secondary"/>
                                                Send message after given months, whichever is earlier.
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>


                        <h2 class="text-primary mt16 mb8">
                            <i class="fa fa-credit-card-alt me-2 text-primary"/>
                            Tyre Shop Payment Reminder Policy
                        </h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-lg-6 col-md-8">
                                <div class="o_setting_box shadow-sm rounded-3 p-3 border border-300 bg-light">
                                    <div class="o_setting_left_pane">
                                        <i class="fa fa-clock-o fa-2x text-info"/>
                                    </div>
                                    <div class="o_setting_right_pane ms-5">
                                        <label for="reminder_message_payment_days" class="fw-bold text-dark"/>
                                        <field name="reminder_message_payment_days" class="w-100"
                                               placeholder="Enter number of days..."/>
                                        <div class="text-muted mt4 small">
                                            <i class="fa fa-info-circle me-1 text-secondary"/>
                                            Send message after given days, whichever is earlier.
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </app>
            </xpath>
        </field>
    </record>
</odoo>
