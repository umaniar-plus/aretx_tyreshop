<?xml version="1.0" encoding="utf-8"?>
<odoo>
    #tree view
    <record id="color_tree_view" model="ir.ui.view">
        <field name="name">vehicle.color.tree</field>
        <field name="model">vehicle.color.model</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
    #form_view
    <record id="color_form_view" model="ir.ui.view">
        <field name="name">vehicle.color.form</field>
        <field name="model">vehicle.color.model</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>

            </form>
        </field>
    </record>
