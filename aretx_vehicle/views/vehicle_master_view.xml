                <field name="x_model_id"/>
                <field name="x_vehicle_number_id"/>
                <field name="x_color_id"/>
                <field name="x_avg_km"/>

            </tree>
        </field>
    </record>
    <!--    #form view-->
    <record id="master_form_view" model="ir.ui.view">
        <field name="name">vehicle.form</field>
        <field name="model">vehicle.master.model</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="priority" widget="priority" class="mr-3"/>
                        </h1>
                    </div>
                    <group>
                        <!--                        <field name="x_customer_id">-->
                        <!--                    <tree string="Customers">-->
                        <!--&lt;!&ndash;                        <field name="x_customer_id"/>&ndash;&gt;-->
                        <!--                        <field name="id"/>-->
                        <!--                    </tree>-->
                        <!--                </field>-->
                        <field name="x_customer_id" widget="many2many_tags" required="1"/>
                        <field name="x_brand_id"/>
                        <field name="x_model_id"/>
                        <field name="x_vehicle_number_id"/>


                        <field name="x_color_id"/>
                        <field name="x_avg_km"/>
                        <field name="last_message_date"/>

                    </group>
                </sheet>
                <!--Chatter-->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
