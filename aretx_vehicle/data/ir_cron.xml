<odoo>
    <record id="ir_cron_tyre_service_reminder" model="ir.cron">
        <field name="name">Tyre Service Reminder</field>
        <field name="model_id" ref="model_tyre_service_reminder"/>
        <field name="state">code</field>
        <field name="code">model._cron_tyre_service_reminder()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
    </record>

    <record id="ir_cron_payment_reminder" model="ir.cron">
        <field name="name">Automatic Payment Reminder</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="state">code</field>
        <field name="code">model._cron_send_payment_reminder()</field>
        <field name="active">True</field>
        <!-- Run daily at 9 AM -->
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="interval_number">1</field>
    </record>


</odoo>
