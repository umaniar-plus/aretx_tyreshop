<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data noupdate="0">
        <record id="invoice_wa_template" model="wa.template">
            <field name="name">invoice_template</field>
            <field name="provider_id" ref="tus_meta_whatsapp_base.provider_1" />
            <field name="model_id" ref="account.model_account_move" />
            <field name="category">utility</field>
            <field name="template_type">template</field>
            <field name="language">en</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <div style="margin: 0px; padding: 0px;">
                        <p style="margin: 0px; padding: 0px; font-size: 13px;">
                            Dear <t
                                t-out="object.sudo().partner_id.name or 'Madam/Sir'"
                                contenteditable="false"
                                data-oe-t-inline="true"
                            >Madam/Sir</t>,
                            <br />
                            <br />
                            Your invoice is generated and the invoice no is <strong
                                t-out="object.name or ''"
                                contenteditable="false"
                            >INV0001</strong>

                            <br />
                            <br />
                            Thank You.

                        </p>
                    </div>
                </div>
            </field>
        </record>

         <record id="sales_wa_template_header" model="components">
            <field name="type">header</field>
            <field name="formate">media</field>
            <field
                name="wa_template_id"
                ref="tus_meta_wa_invoice.invoice_wa_template"
            />
            <field name="media_type">document</field>
        </record>

        <record id="invoice_wa_template_body" model="components">
            <field name="type">body</field>
            <field name="formate">text</field>
            <field
                name="wa_template_id"
                ref="tus_meta_wa_invoice.invoice_wa_template"
            />
            <field name="text">Dear {{1}},

Your invoice is generated and the invoice no is {{2}}.

Thank You.</field>
        </record>
    </data>
</odoo>
